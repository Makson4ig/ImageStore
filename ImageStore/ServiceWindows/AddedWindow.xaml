<Window x:Class="ImageStore.ServiceWindows.AddedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageStore.ServiceWindows"
        mc:Ignorable="d"
        Height="120" Width="240" ResizeMode="NoResize" WindowStyle="None" BorderBrush="#FFEC1616">
    <Grid Background="#FFB9D1EA">

        <Image Source="../Icon/info.png" Width="30" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Fill" Margin="20,38,190,56"/>

        <TextBlock HorizontalAlignment="Left" Margin="55,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="130" FontSize="20" FontFamily="Roboto" Text="    Добавлено!" />
        <Button x:Name="Ok" Content="Ок" HorizontalAlignment="Left" Margin="80,80,0,10" VerticalAlignment="Center" Width="80" Height="30" BorderBrush="#FF62757F" Background="#FF62757F" FontFamily="Roboto" FontSize="15
                " Click="Ok_Click" >
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
            </Button.Foreground>
        </Button>

    </Grid>
</Window>
