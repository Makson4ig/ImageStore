<Window x:Class="ImageStore.ServiceWindows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageStore.ServiceWindows"
        mc:Ignorable="d"
        Height="240" Width="425" ResizeMode="NoResize" WindowStyle="None" BorderBrush="#FFEC1616">
    <Grid Background="#FFB9D1EA">
        <Image Source="../Icon/info.png" Width="40" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Fill" Margin="20,85,365,120" RenderTransformOrigin="0,0.577"/>
        <Button x:Name="Ok" Content="Ок" Margin="135,190,135,0" VerticalAlignment="Top" Height="30" BorderBrush="#FF62757F" Background="#FF62757F" FontFamily="Roboto" FontSize="15
                " Click="Ok_Click">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
            </Button.Foreground>
        </Button>
        <TextBlock Name="TextErr" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="15" FontFamily="Roboto" Text="" VerticalAlignment="Top" Height="150" Width="320" Margin="80,20,0,0" TextAlignment="Center" />
    </Grid>
</Window>
