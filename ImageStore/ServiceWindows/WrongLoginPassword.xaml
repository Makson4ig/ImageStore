<Window x:Class="ImageStore.ServiceWindows.WrongLoginPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageStore.ServiceWindows"
        mc:Ignorable="d"
        Title="WrongLoginPassword" Height="140" Width="280" ResizeMode="NoResize" WindowStyle="None" BorderBrush="#FFEC1616">
    <Grid Background="#FFB9D1EA" Height="140" VerticalAlignment="Bottom">

        <Image Source="../Icon/info.png" Width="30" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Fill" Margin="20,49,230,65"/>


        <TextBlock x:Name="Cancel" HorizontalAlignment="Left" Margin="60,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="205" FontSize="20" FontFamily="Roboto" Text="Неверный Логин или Пароль." />
        <Button x:Name="Ok" Content="Ок" HorizontalAlignment="Left" Margin="110,100,0,15" VerticalAlignment="Center" Width="80" Height="25" BorderBrush="#FF62757F" Background="#FF62757F" FontFamily="Roboto" FontSize="15" Click="Ok_Click" >
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
            </Button.Foreground>
        </Button>

    </Grid>
</Window>
