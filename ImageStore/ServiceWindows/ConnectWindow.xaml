<Window x:Class="ImageStore.ServiceWindows.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="120" Width="245" ResizeMode="NoResize" WindowStyle="None" BorderBrush="#FFEC1616">
    <Grid Background="#FFB9D1EA">

        <Image Source="../Icon/info.png" Width="30" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Fill" Margin="10,39,205,55"/>


        <TextBlock x:Name="CancelScan" HorizontalAlignment="Left" Margin="50,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="46" Width="190" FontSize="20
                   " FontFamily="Roboto" Text="Нет подключения к Базе Данных" />
        <Button x:Name="OkCancelScan" Content="Ок" HorizontalAlignment="Left" Margin="80,85,0,13" VerticalAlignment="Center" Width="80" Height="22" BorderBrush="#FF62757F" Background="#FF62757F" FontFamily="Roboto" FontSize="15
                " Click="OkCancelScan_Click">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
            </Button.Foreground>
        </Button>

    </Grid>
</Window>
